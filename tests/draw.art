   timeloop (dt = 0.001 ; end = 10.0)
    {
        theta += .010 * PI;
        c.ox = ox + 1.3 * c.r * cos(theta);
        c.oy = oy + 1.3 * c.r * sin(theta);
        p.add_point(c.ox, c.oy);
    }
    printf(theta);
